@model List<User>

@{
    ViewData["Title"] = "Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Results</h2>

@if (Model.Count == 0)
{
    <p>No users found.</p>
}
else
{
    <ul>
        @foreach (var user in Model)
        {
            <li><a asp-action="Profile" asp-controller="User" asp-route-id="@user.Id">@user.UserName</a></li>
        }
    </ul>
}